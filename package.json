{
  "name": "purecloud-webrtc-sdk",
  "version": "1.0.2",
  "description": "client for the interfacing with PureCloud WebRTC",
  "repository": "https://github.com/mypurecloud/purecloud-webrtc-sdk",
  "license": "MIT",
  "main": "src/client.js",
  "browser": "web/purecloud-webrtc-sdk.js",
  "files": [
    "src",
    "web/purecloud-webrtc-sdk.js"
  ],
  "pre-push": [
    "test"
  ],
  "scripts": {
    "build": "npx webpack",
    "build-sample": "npx webpack --config ./test/test-pages/webpack.config.js",
    "unit-test": "NODE_ENV=test nyc ava test/unit/*.js",
    "pretest": "npm run build",
    "start": "stupid-server -s -p 4300",
    "test": "npm run semistandard && npm run unit-test",
    "watch-tests": "watch 'npm test' src test",
    "semistandard": "semistandard",
    "semistandard:fix": "semistandard --fix"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "semistandard": {
    "ignore": [
      "/.nyc_output",
      "/coverage",
      "/scripts",
      "/test/test-pages/sdk-sample.js"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ],
    "env": {
      "test": {
        "plugins": "istanbul"
      },
      "production": {
        "plugins": []
      }
    }
  },
  "ava": {
    "files": [],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "powerAssert": true,
    "require": [
      "babel-register"
    ]
  },
  "author": "",
  "dependencies": {
    "purecloud-platform-client-v2": "^29.1.0",
    "stupid-server": "^0.2.2",
    "superagent": "^3.8.3",
    "wildemitter": "^1.2.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.7.0",
    "nock": "^9.3.0",
    "nyc": "^12.0.2",
    "semistandard": "^12.0.1",
    "sinon": "^6.1.3",
    "watch": "^1.0.2",
    "webpack": "^4.8.3",
    "webpack-cli": "^3.0.8"
  },
  "false": {}
}
